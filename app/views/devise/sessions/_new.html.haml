= form_for(:user, url: user_session_path(),
    html: { id: 'login_form', 'data-type': 'json' },
    remote: true) do |f|
  .field
    = f.email_field :email, autofocus: true, placeholder: 'User name or email address'
  .field
    = f.password_field :password, autocomplete: "off", placeholder: 'Password'
  / - if devise_mapping.rememberable?
  /   .field
  /     = f.check_box :remember_me
  /     = f.label :remember_me
  .actions
    = f.submit "Log in", class: 'btn waves-effect waves-light'
/ = render "devise/shared/links"
